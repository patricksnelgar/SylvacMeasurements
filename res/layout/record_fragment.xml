<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="100"
              android:transitionGroup="true">

    <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/listHistory" android:layout_gravity="center_horizontal" android:layout_weight="80"
            android:drawSelectorOnTop="false" android:footerDividersEnabled="false"
            android:headerDividersEnabled="true" android:smoothScrollbar="true" android:stackFromBottom="true"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="10dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:weightSum="100">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textEntryID" android:layout_weight="15"
                android:textAppearance="?android:attr/textAppearanceLarge" android:textAlignment="center"
                android:password="false" android:gravity="center_horizontal"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textCurrentMeasurements" android:paddingTop="5dip" android:paddingBottom="5dip"
                android:textSize="20sp" android:paddingStart="5dp"
                android:singleLine="false"
                android:layout_weight="85" android:gravity="right" android:paddingRight="10dip"/>
    </LinearLayout>
</LinearLayout>