<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:gravity="center_vertical"
    android:id="@+id/parent"
    android:paddingLeft="16dp"
    android:clickable="false"
    android:focusable="false">
    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_bluetooth_black_48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textRecordID"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textRecordData"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:minLines="1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:typeface="serif"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="72dp"
        android:clickable="false"
        android:focusable="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bondedDevice"
        android:layout_alignBottom="@+id/textRecordID"
        android:layout_toEndOf="@+id/textRecordData"
        android:enabled="false"
        android:clickable="false"
        android:focusable="false" />

</RelativeLayout>