<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:gravity="center_vertical"
    android:paddingLeft="16dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/deviceIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/deviceinfo"
        android:layout_alignBottom="@+id/deviceinfo"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="false"
        android:adjustViewBounds="false"
        android:clickable="false"
        android:cropToPadding="false"
        android:focusable="false"
        android:src="@drawable/ic_bluetooth_black_48dp" />

    <RelativeLayout
        android:id="@+id/deviceinfo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="false"
        android:layout_marginLeft="72dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_marginRight="16dp"
            android:clickable="false"
            android:focusable="false"
            android:maxLines="1"
            android:minLines="1"
            android:text="New Text"
            android:textColor="@color/primary_text_material_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textDeviceAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDeviceName"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:clickable="false"
            android:focusable="false"
            android:maxLines="1"
            android:minLines="1"
            android:text="00:00:00:00:00"
            android:textColor="@color/secondary_text_material_light"
            android:textSize="24sp"
            android:typeface="serif" />
    </RelativeLayout>

</RelativeLayout>